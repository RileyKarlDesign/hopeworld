.my-cart{
  background: rgb(193, 193, 193);
  width: calc( 100vw );
  cursor: pointer;
  position: fixed;
  top: 100vw;
  bottom: 0px;
  left: 0px;
  right: 10px;
  transition: ease all 0.3s ;

}

