/*  Cart  */


.body-wrap{

  background-color: white;
  overflow: scroll;
   
}

.body-inactive{
  opacity: .4;
}

.my-cart{
  
  position: fixed ; 
  top: 110vh;
  bottom:20px;
  right: -200px;
  rotate:20deg;
  z-index: 10000;
  width: calc( 350px );
  cursor: pointer;
  transition: ease all 0.3s ;
  overflow: hidden;
  opacity: 0;
  overflow : hidden
}
 
.cart-open{
  height: 90vh;
  top: 5vh;
  bottom:20px;
  right: 50px;
  rotate:-3deg;
  z-index: 10000;
  overflow : hidden;
  transition: ease all 0.3s ;
  opacity: 100;
}

ajax-cart-product-form[processing]:before {
  content: 'Loading';
  display: block;
}

/* Make the "Add to cart" button look visually disabled while loading */
ajax-cart-product-form[processing] [type="submit"] {
  opacity: .7;
  cursor: not-allowed;
  pointer-events: none;
}

.my-cart__items {
  opacity: 1;
  transition: opacity .2s;
}

/* Make the cart content look visually disabled while updating */
html.js-ajax-cart-processing .my-cart__items {
  opacity: .7;
}

/* Show a loading indicator */
html.js-ajax-cart-processing .my-cart__items:before {
  content: 'Loading';
  display: block;
}


