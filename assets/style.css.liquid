/*  custom scroll bar   */
/* width */
::-webkit-scrollbar {
  width: 0px;
  position: fixed;
}

/* Track */
::-webkit-scrollbar-track {
  box-shadow: inset 0 0 5px grey;
  border-radius: 10px;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: red;
  border-radius: 10px;
}


