<div class=' p-2'>
    
    {% if collection.all_products_count > 0 %}
     {% render 'shop-filters' %}

    <div class='grid  md:grid-cols-4 sm:grid-cols-3  grid-cols-2  gap-1 pt-4 pb-2    '>  
   
        {% for product in collection.products %}
             {% render 'product-card'  with {product: product} %}
        {% endfor %}

    </div>

{% else %}
    {% render 'shop-filters' %}
    <div class='flex align-center bg-stone-50 h-8 justify-center pt-20 pb-20  '>  
        <p> Nothing to see here yet </p>
    </div>
{% endif %}
</div>