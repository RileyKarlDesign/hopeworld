<div class='pt-28 p-2'>
    {% if collection.all_products_count > 0 %}
    {% render 'shop-filters' %}

    <div class='grid grid-flow-dense grid-cols-5 col-span-4 gap-2 pt-20 pb-20   '>  
   
        {% for product in collection.products %}
                {% render 'product-card'  with {product: product} %}
            {% endfor %}
    </div>
{% else %}
    {% render 'shop-filters' %}
    <div class='flex align-center bg-stone-50 h-28 justify-center pt-20 pb-20  '>  
        <p> Nothing to see here yet </p>
    </div>
{% endif %}
</div>