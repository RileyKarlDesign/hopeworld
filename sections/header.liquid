<div class='grid   grid-cols-3 p-[10px] fixed z-50 w-full '> 

    <div class=' h-14 w-fit ' >
        <a href="/"> {{  shop.brand.logo | image_url: width: 700 | image_tag }} </a>
    
    </div>


    <ul class=' flex w-fit   h-fit  '>
        {% for link in linklists.main-menu.links %}
        <li class='  w-fit  h-fit  pt-[2px] pl-2 pr-2'><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
    </ul>

    <div class='flex justify-end w-fit' id='cart-btn' >
        <p class='  w-fit h-fit pl-2 pr-2 mb-1'> Cart [ {{ cart.item_count }} ]</p>
    </div>

</div>

<script>

    document.addEventListener('DOMContentLoaded',function () {

    let cart = document.querySelector('.my-cart');
    let cartBtn = document.querySelector('#cart-btn');
    let cartState = false ;

       let closeCart= ()=> {
        
        cart.classList.remove('cart-open')
        
      };

      let openCart= ()=> {
    
        cart.classList.add('cart-open')

      };

      cartBtn.addEventListener('click', ()=> {  

        console.log('clikc')
        
        if(cartState){
          console.log('colse')
          cartState = false;
          closeCart();
        } else { 
            console.log('open')
          cartState = true;
          openCart();
        }

      });

    })

  </script>