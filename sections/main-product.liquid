

<div class=" relative"> 
        <div class="pb-4  md:pl-0 md:pr-0 p-2 sm:pt-0 pt-[65px]  overflow-hidden"> 

                        <!-- Slider main container -->
                        <div class="product-swiper w-full   md:h-[75vh]  h-fit overflow-hidden">
                            <!-- Additional required wrapper -->
                            <div class="swiper-wrapper w-full h-full ">
                            <!-- Slides -->
                     
                            {% for image in product.images %}

                                <div class='swiper-slide w-full h-fit aspect-main  flex justify-center   overflow-hidden  bg-red-500'>
                                    <div class="   "> 
                                <div class='bg-stone-100  aspect-main md:h-full md:w-auto w-full h-fit '>
                                        {{ image | image_url: width: 700 | image_tag: class:'h-full object-contain' }}      
                                    </div>      
                                        <p class='caption pl-2 pt-1 pb-2 text-center absolute bottom-0 left-0  right-0 center '> {{ forloop.index }} / {{ forloop.length }}  </p>            
                                    </div>
                                </div>
                    
                
                            {% endfor %}

                            </div>
                            <!-- If we need pagination -->
                            <div class="swiper-pagination"></div>
                        
                            <!-- If we need navigation buttons -->
                            {% comment %} <div class='bg-red-500'>
                                <div class="swiper-button-prev"></div>
                                <div class="swiper-button-next"></div>
                            </div> {% endcomment %}
                            <!-- If we need scrollbar -->
                          
                        </div>



           
        </div>
        <div class=" flex flex-co gap-4 align-middle justify-center  " > 
            <div class='  sm:w-base w-full sm:p-0 p-2 col-start-2 col-span-1 bp-40  '>
                  
                <div class='  pb-6'> 
                            <div class='pb-2 text-center'>   
                            <h2>{{product.title}}</h2>
                        </div>
                        <p> {{ product.description }}</p>
                </div>


                <div class='  pb-0'>
                    {% render 'info-line' with { title: 'Width', value: product.metafields.custom.width  }  %}
                    {% render 'info-line' with { title: 'Height', value: product.metafields.custom.height  }  %}
                    {% render 'info-line' with { title: 'Burn Time', value: product.metafields.custom.burn_time }  %}
                
                
                    <ajax-cart-product-form> 
                    {% render 'add-to-cart-form' with current_variant: current_variant  %}
                    </ajax-cart-product-form>
                    </div>
                </div>
        </div>
        {% render 'atc-stick' %} 
</div>