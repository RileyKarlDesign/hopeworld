
<div class="">
    {% for block in section.blocks %}
      {% case block.type %}
      {% when 'slide' %}
        <div class=" sticky top-0 h-screen " {{ block.shopify_attributes }}>
          {{ block.settings.image | image_url: width: 2048 | image_tag }}
          
          
          <div class="h-full w-full flex flex-col  items-center justify-end absolute top-0 sm:pb-4  p-2 ">


          
            <div class=" sticky bottom-4 sm:w-base  w-full p-4 bg-c1 border-2 border-dotted border-black bg-opacity-50 rounded-base backdrop-blur-lg  ">
              <div class="flex justify-between ">
                <h2 class=" indent-0"> {{ block.settings.title }} </h2>
                <h2 class=" indent-0"> {{ forloop.index }} / {{forloop.length}}</h2>
              </div>
              <p> {{block.settings.body}}</p>
            </div>
          </div>

        </div>

      
    {% endcase %}
    {% endfor %}

</div>
   
  



{% schema %}
{
  "name": "Slideshow and text ",
  "tag": "section",
  "class": "slideshow",
  "limit": 1,
  "settings": [
 
  ],
  "max_blocks": 5,
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "body",
      "label": "Body"
    }
       ]
     }
  ],
  "presets": [
    {
      "name": "Slideshow and text ",
      "settings": {
        "title": "Slideshow and Text"
      },
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

