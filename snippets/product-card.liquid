<div class=" group flex flex-col  relative product-card pb-4 ">
<a href="{{ product.url }}" >
<div class=" "> 

    {% if product.featured_image %}
        <div  class=' featuredProductImage h-full rounded-sm bg-gray-100 bg-opacity-50 overflow-hidden aspect-main'>
          
            {{ product.featured_image | image_url: width: 700 | image_tag }}
           
         <div class=" opacity-0  text-c1 group-hover:opacity-100 absolute flex justify-center items-center inset-0 ">
            <h2 class=" indent-0  text-[20px ]"> ( 001 ) </h2>
         </div>   
        </div>
       
      

    {% endif %}
</div>
<div class='  bottom-2 left-2'>


    {% render 'info-line' with { title:'Name', value: product.title } %}
    {% render 'info-line' with { title:'Price', value:  product.price | money  } %}

    <p class='opacity-50' >  </p>
    <p> {{ product.compare_at_price | money_with_currency }} </p>
</div>


</a>
</div>
