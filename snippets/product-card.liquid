<div class="flex flex-col  relative product-card ">
<a href="{{ product.url }}" >
<div class=" "> 

    {% if product.featured_image %}
        <div  class=' featuredProductImage h-full rounded-sm bg-gray-50 bg-opacity-50 overflow-hidden aspect-main'>
          
            {{ product.featured_image | image_url: width: 700 | image_tag }}
           
           
        </div>
       
      

    {% endif %}
</div>
<div class=' absolute bottom-2 left-2'>
    <p> {{ product.title }} </p>
    <p class='opacity-50' > {{ product.price | money }} </p>
    <p> {{ product.compare_at_price | money_with_currency }} </p>
</div>


</a>
</div>
